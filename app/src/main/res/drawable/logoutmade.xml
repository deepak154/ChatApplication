<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:endColor="#800000"
                android:centerColor="#FF6347"
                android:startColor="#FF0000"
                android:type="linear" />

            <stroke
                android:width="3dp"
                android:color="#FFFF"/>
        </shape>
    </item>

    <item
        android:bottom="5dp"
        android:drawable="@drawable/logout"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />

</layer-list>