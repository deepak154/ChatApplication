<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/b2ackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.TabbedHostIntial$PlaceholderFragment">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/talkIV"
        android:layout_marginTop="70dp"
        android:src="@drawable/chaticon1"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speak Your Mind"
        android:id="@+id/talkTV"
        android:layout_below="@id/talkIV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="@string/talkText"
        android:gravity="center"
        android:layout_below="@id/talkTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="18dp"
        android:textStyle="italic"
        android:textColor="#344152"/>


    <Button
        android:layout_width="110dp"
        android:textAllCaps="true"
        android:layout_height="50dp"
        android:text="Next"
        android:id="@+id/nextMBT"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/back2"
        android:textColor="#344152"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="8dp"
        />
    <Button
        android:layout_width="110dp"
        android:textAllCaps="true"
        android:layout_height="50dp"
        android:text="Previous"
        android:id="@+id/previousMBT"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/back2"
        android:textColor="#344152"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="8dp"
        />


</RelativeLayout>